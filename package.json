    },
    "bugs": {
        "url": "https://bugtracking.emakina.net/secure/RapidBoard.jspa?rapidView=1151&projectKey=FRNIKEFFF&view=planning.nodetail"
    },
    "homepage": "http://magento.com/",
    "scripts": {
        "stylelint": "./node_modules/.bin/stylelint app/design/frontend/Ouranos/**/*.less",
        "stylelint-fix": "./node_modules/.bin/stylelint app/design/frontend/Ouranos/**/*.less --fix"
    },
    "devDependencies": {
        "@magento/eslint-config": "^1.5.2",
        "eslint": "^6.5.1",
        "eslint-config-google": "^0.14.0",
        "eslint-config-prettier": "^6.0.0",
        "eslint-config-recommended": "^4.0.0",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-package-json": "^0.1.3",
        "eslint-plugin-react": "^7.17.0",
        "eslint-plugin-react-hooks": "^2.1.2",
        "glob": "~7.1.1",
        "grunt": "~1.0.1",
        "grunt-autoprefixer": "~3.0.4",
        "grunt-banner": "~0.6.0",
        "grunt-continue": "~0.1.0",
        "grunt-contrib-clean": "~1.1.0",
        "grunt-contrib-connect": "~1.0.2",
        "grunt-contrib-cssmin": "~2.2.1",
        "grunt-contrib-imagemin": "~2.0.1",
        "grunt-contrib-jasmine": "~1.1.0",
        "grunt-contrib-less": "~1.4.1",
        "grunt-contrib-watch": "~1.0.0",
        "grunt-eslint": "~20.1.0",
        "grunt-exec": "~3.0.0",
        "grunt-jscs": "~3.0.1",
        "grunt-replace": "~1.0.1",
        "grunt-styledocco": "~0.3.0",
        "grunt-template-jasmine-requirejs": "~0.2.3",
        "grunt-text-replace": "~0.4.0",
        "husky": "^4.0.0-beta.2",
        "imagemin-svgo": "~5.2.1",
        "lint-staged": "^10.0.0-0",
        "load-grunt-config": "~0.19.2",
        "morgan": "~1.9.0",
        "node-minify": "~2.3.1",
        "path": "~0.12.7",
        "prettier": "^1.9.2",
        "prettier-check": "^2.0.0",
        "serve-static": "~1.13.1",
        "squirejs": "~0.2.1",
        "strip-json-comments": "~2.0.1",
        "stylelint": "^11.1.1",
        "stylelint-config-standard": "^19.0.0",
        "time-grunt": "~1.4.0",
        "underscore": "~1.8.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged --relative --shell"
        }
    },
    "lint-staged": {
        "!(app/etc/*).{php,phtml}": [
            "make asroot \"docker-compose exec -T php ./vendor/bin/php-cs-fixer fix  --config .php_cs\"",
            "make asroot \"docker-compose exec -T php ./vendor/bin/phpstan analyze -l 7 --no-progress \"",
            "git add"
        ],
        "app/code/Ouranos/**/*.less|app/design/frontend/Ouranos/**/*.less": [
            "make asroot \"docker-compose exec -T php ./node_modules/.bin/stylelint --fix\"",
            "git add"
        ],
        "app/code/Ouranos/**/*.js|app/design/frontend/Ouranos/**/*.js": [
            "make asroot \"docker-compose exec -T php ./node_modules/.bin/eslint --fix\"",
            "git add"
        ]
    }
}
